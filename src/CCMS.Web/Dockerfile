# Dockerfile (NET 9) - copy whole repo then restore solution
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# copy everything (context should be the repo root containing CCMS.sln)
COPY . .

# restore using solution file (adjust name if different)
RUN dotnet restore "CCMS.sln"

RUN dotnet publish "src/CCMS.Web/CCMS.Web.csproj" -c Release -o /app/publish --no-restore

FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish .
ENV ASPNETCORE_URLS=http://+:8080
ENV ASPNETCORE_ENVIRONMENT=Production
EXPOSE 8080
ENTRYPOINT ["dotnet", "CCMS.Web.dll"]
